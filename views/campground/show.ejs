<%-include("../partials/header")%>

<div class="container">
    <div class="row">
    
    <div class="col-md-3">
        <p class="lead">YelpCamp</p>
        <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
        </div>
        </div>
    <div class="col-md-9 jumbotron">
        <div class="thumbnail">
           <img class="img-responsive" src="<%=info.image%>">
        </div>
        <div class="caption-full">
        <h4 class="text-right">$9.00/night</h4>
        <a href="#"><h4><%=info.name%></h4></a>
        <p><%=info.description%></p>
    
        </div>
        </div>
        </div>
    <div class="well jumbotron">
        <div class="float-right">
        <a class="btn btn-success" href="/campground/<%=info._id%>/comment/new">Add new comment</a></div>  
        
    <br>
    <br>
        <%info.comments.forEach(function(comment){%>
        <div class="row">
        <div class="col-md-12">
            <strong><%=comment.author%>:-</strong>
            <span class="float-right">10 days ago</span>
            <p><%=comment.text%></p>
            </div>
        </div>
        <%})%>
    
        </div>
     
    </div>
   
<%-include("../partials/footer")%>